<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="755.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.phonestoremanager.controllers.ManageContentController">
    <children>
        <TextField fx:id="searchField" layoutX="429.0" layoutY="23.0" prefHeight="30.0" prefWidth="222.0" promptText="Search"
                   style="-fx-background-color: transparent; -fx-border-radius: 50px; -fx-border-color: #AEB2C3;">
            <font>
                <Font name="Calibri Bold" size="20.0" />
            </font>
        </TextField>

        <Button layoutX="95.0" layoutY="23.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="100.0" text="Cập nhật"
                styleClass="menu-button">
            <font>
                <Font name="Calibri Bold" size="18.0" />
            </font>
        </Button>

        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" layoutY="81.0" prefHeight="480.0" prefWidth="755.0"
                    style="-fx-background-color: linear-gradient(to bottom, #e0e0e0, #f0f0f0);" vbarPolicy="NEVER">
            <content>
                <FlowPane fx:id="manageContainer" nodeOrientation="LEFT_TO_RIGHT" />
